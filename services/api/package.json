{
  "name": "api-temperature-monitoring",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts | pino-pretty",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "node dist/infrastructure/database/db-reset.js && node dist/infrastructure/database/postgres/seeds/run-seeds.js && node dist/index.js",
    "db:reset:prod": "ts-node src/infrastructure/database/db-reset.ts",
    "db:reset": "ts-node src/infrastructure/database/db-reset.ts",
    "db:deploy": "npm run db:reset && npm run seed:run:dev",
    "seed:generate": "npx typeorm-extension seed:create --root ./src/infrastructure/database/postgres/seeds/ --name",
    "seed:run:dev": "npm run build && npx typeorm-extension seed:run -d ./src/infrastructure/database/postgres/data-source.ts",
    "migration:generate": "npm run typeorm -- -d ./src/infrastructure/database/postgres/data-source.ts migration:generate ./src/infrastructure/database/postgres/migrations/$npm_config_name",
    "migration:create": "npm run typeorm -- migration:create ./src/infrastructure/database/postgres/migrations/%npm_config_name%",
    "migration:run:dev": "npm run typeorm -- -d ./src/infrastructure/database/postgres/data-source.ts migration:run",
    "migration:run": "npm run build && npm run typeorm -- -d ./dist/infrastructure/database/postgres/data-source.js migration:run"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.10.9",
    "dotenv": "^17.2.3",
    "dustjs-linkedin": "^3.0.1",
    "express": "^5.2.1",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.28",
    "typeorm-extension": "^3.7.3"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.8",
    "@types/dustjs-linkedin": "^1.2.36",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.1",
    "@types/pg": "^8.16.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
