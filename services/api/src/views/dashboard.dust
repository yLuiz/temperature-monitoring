<!doctype html>
<html lang="pt-br">

<head>
  <meta charset="utf-8" />
  <title>{title}</title>
  <link rel="stylesheet" href="/public/styles/dashboard.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>

<body>
  <h1>{title}</h1>

  <p>Última atualização: <span id="last-updated"></span></p>

  <ul id="sensor-list">
    {#sensors}
    <li>
      <strong>{name}</strong><br />
      Sensor CODE: {code} <br />
      Temp: <span class="temp">{temperature}</span> °C |
      Umid: <span class="hum">{humidity}</span> %<br />
      <small>ID: {id}</small>
    </li>
    {/sensors}
  </ul>

  <script>
    // dados iniciais vindos do SSR (Dust)
    window.__INITIAL_SENSORS__ = { sensors_json };
  </script>
  <script src="/public/js/dashboard.js" defer></script>
</body>

</html>