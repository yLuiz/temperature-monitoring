<!doctype html>
<html lang="pt-br">

<head>
  <meta charset="utf-8" />
  <title>Temperature Monitoring</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link rel="stylesheet" href="/public/css/dashboard.css" />
</head>

<body>

  <header class="header">
    <h1>Temperature Monitoring</h1>
    <p class="updated">
      Última atualização:
      <span id="last-updated">{lastUpdated}</span>
    </p>
  </header>

  <section class="stats">
    <div class="stat-card">
      <span>Sensores Ativos</span>
      <strong>{totalSensors}</strong>
    </div>

    <!-- <div class="stat-card">
      <span>Temperatura Média</span>
      <strong>{stats.avgTemperature}°C</strong>
    </div>

    <div class="stat-card">
      <span>Umidade Média</span>
      <strong>{stats.avgHumidity}%</strong>
    </div> -->
  </section>

  <section class="sensors" id="sensor-list">
    {#sensors}
    <div class="sensor-card {status}">
      <header>
        <h2>{name}</h2>
        <span class="code">{sensorCode}</span>
      </header>

      <div class="metric">
        <label>Temperatura</label>
        <div class="bar">
          <!-- <div class="fill temp" style="width:{temperaturePercent}%"></div> -->
        </div>
        <strong class="value">{temperature}°C</strong>
      </div>

      <div class="metric">
        <label>Umidade</label>
        <div class="bar">
          <!-- <div class="fill hum" style="width:{humidity}%"></div> -->
        </div>
        <strong class="value">{humidity}%</strong>
      </div>
    </div>
    {/sensors}
  </section>

  <script>
    window.__INITIAL_SENSORS__ = [];
  </script>

  <script src="/public/js/dashboard.js"></script>
</body>

</html>